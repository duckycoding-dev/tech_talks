---
import RootLayout from '@/layouts/RootLayout.astro';
---

<RootLayout title="2. Routing - Deck A">
  <h1>Navigation Demo</h1>

  <div
    class="station"
    transition:name="station-card"
  >
    <h2>üìç Command Deck (A)</h2>
    <p>Current Sector: Alpha</p>

    <div class="controls">
      <!-- data-astro-prefetch enables instant loading on hover/viewport -->
      <a
        href="/demos/2-routing-b"
        class="btn-link"
        data-astro-prefetch
      >
        Warp to Engineering (Deck B) ‚Üí
      </a>
    </div>
  </div>

  <div class="instructions">
    <h3>Observe:</h3>
    <ul>
      <li
        ><strong>Prefetching:</strong> Open Network tab. Hover the link. See the
        request?</li
      >
      <li
        ><strong>View Transitions:</strong> Click the link. Watch the "Command
        Deck" card morph.</li
      >
    </ul>
  </div>
</RootLayout>

<style>
  .station {
    background: var(--space-blue);
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid var(--accent);
    margin-bottom: 2rem;
  }
  .btn-link {
    display: inline-block;
    background: var(--accent);
    color: var(--space-black);
    padding: 0.8rem 1.5rem;
    border-radius: 6px;
    font-weight: bold;
    margin-top: 1rem;
  }
  .btn-link:hover {
    text-decoration: none;
    opacity: 0.9;
  }
  .instructions {
    opacity: 0.8;
  }
</style>
