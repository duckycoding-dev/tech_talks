---
import RootLayout from '@/layouts/RootLayout.astro';
import ServerRendered from '@/components/demos/basics/ServerRendered.astro';
import ScopedStyles from '@/components/demos/basics/ScopedStyles.astro';
import ClientInteraction from '@/components/demos/basics/ClientInteraction.astro';
---

<RootLayout title="1. The Basics">
  <div class="breadcrumb"> <a href="/">‚Üê Back to Mission Control</a> </div>

  <h1>The Basics</h1>
  <p class="subtitle">Three core concepts that make Astro different</p>

  <section class="demo-section">
    <span class="badge">1. HTML-First Output</span>
    <ServerRendered />
  </section>

  <section class="demo-section">
    <span class="badge">2. Scoped CSS</span>
    <ScopedStyles />
  </section>

  <section class="demo-section">
    <span class="badge">3. Opt-in Client JS</span>
    <ClientInteraction />
  </section>
</RootLayout>

<style>
  .subtitle {
    color: var(--color-text);
    opacity: 0.8;
    margin-bottom: 2rem;
  }

  .demo-section {
    position: relative;
    background: var(--color-card);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 2rem 1.5rem 1.5rem;
    margin-bottom: 1.5rem;
  }

  .badge {
    position: absolute;
    top: -0.75rem;
    left: 1rem;
    background: var(--accent);
    color: var(--space-black);
    font-size: 0.75rem;
    font-weight: 700;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }
</style>
